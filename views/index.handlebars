<h1>Eat-Da-Burger!</h1>

<div class="row">
    <ul class="col-md-6 col-12">
        {{#each burger}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
    </ul>
    <ul class="col-md-6 devoured-block col-12">
        {{#each burger}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
    </ul>
</div>
<form class="create-form">
    <div class="form-group">
        <textarea class="form-control" id="bu" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mb-2">Submit</button>
    <p>Enter a burger you want to eat and click the "Submit" button</p>
</form>